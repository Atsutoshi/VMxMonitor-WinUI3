<?xml version="1.0" encoding="utf-8"?>
<UserControl 
    x:Class="VMxMonitor.controls.PeakIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:VMxMonitor.controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="80">
		<Border x:Name="wBorder" BorderBrush="LightGray" BorderThickness="4" CornerRadius="50" Background="DarkGray">
			<TextBlock x:Name="wText" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Foreground="White" />
		</Border>
	</Grid>
</UserControl>
